<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="geniushub"
						  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
						  xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
						  xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
	<bridge-type id="hub">
        <label>Genius Hub</label>
        <description>Genius Hub Home Heating control</description>
        <properties>
            <property name="name"></property>
        </properties>
        <config-description>
            <parameter name="username" type="text" required="true">
                    <label>username</label>
                    <description>Username for talking to Hub</description>
                    <context>username</context>
            </parameter>
            <parameter name="password" type="text" required="true">
                    <label>password</label>
                    <description>Password for talking to Hub</description>
                    <context>password</context>
            </parameter>        
        
            <parameter name="RefreshInterval" type="integer" required="false">
                <label>Refresh Interval</label>
                <default>60</default>
                <description>How often to refresh information.
                </description>
            </parameter>
        </config-description>
    </bridge-type>
	
	
<thing-type id="Zone" listed="false"> 

	    <supported-bridge-type-refs>
            <bridge-type-ref id="hub" />
        </supported-bridge-type-refs>
		<label>GeniusHub Zone</label>
		<description> GeniusHub Zone thing</description>
        <channels>
            <channel id="temp" typeId="temp"/>
            <channel id="status" typeId="status"/>
        </channels>		
		
        <config-description>
            <parameter name="id" type="text" required="false">
                <label>id</label>
                <description>Numeric ID of the Harmony Device (id or name is required)</description>
            </parameter>
            <parameter name="name" type="text" required="false">
                <label>id</label>
                <description>Name of the Harmony Device (name or id is required)</description>
            </parameter>
        </config-description>

	</thing-type>

	<!-- Sample Channel Type -->
	<channel-type id="temp">
        <item-type>Number</item-type>
        <label>Current Zone Temp Channel</label>
        <description>Zone Temp channel for GeniusHub Binding</description>
    </channel-type>
    <channel-type id="settemp">
        <item-type>Number</item-type>
        <label>Set Zone Temp Channel</label>
        <description>Set Zone Temp Channell for GeniusHub Binding</description>
    </channel-type>
    
</thing:thing-descriptions>
